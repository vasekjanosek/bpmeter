<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:BpMeter.UI.Pages.Settings"
             x:Class="BpMeter.UI.Pages.Settings.AddPersonalInformation.BirthDatePage"
             Title="Add Your Birth Date">
    <StackLayout>
        <Label Text="What your birth date?" />
        <Picker SelectedIndex="{Binding BirthDate}" />
        <HorizontalStackLayout>
            <Button Text="Back" Command="{Binding ChangePageCommand}" CommandParameter="LastNamePage" />
            <Button Text="Continue" Command="{Binding ChangePageCommand}" CommandParameter="HeightPage" />
        </HorizontalStackLayout>
    </StackLayout>

</ContentPage>
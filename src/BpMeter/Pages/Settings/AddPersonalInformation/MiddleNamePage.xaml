<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:BpMeter.UI.Pages.Settings"
             x:Class="BpMeter.UI.Pages.Settings.AddPersonalInformation.MiddleNamePage"
             Title="Add Personal infromation">
    <StackLayout>
        <Label Text="What your middle name?" />
        <Entry Text="{Binding MiddleName}" />
        <HorizontalStackLayout>
            <Button Text="Back" Command="{Binding ChangePageCommand}" CommandParameter="FirstNamePage" />
            <Button Text="Continue" Command="{Binding ChangePageCommand}" CommandParameter="LastNamePage" />
        </HorizontalStackLayout>
    </StackLayout>

</ContentPage>
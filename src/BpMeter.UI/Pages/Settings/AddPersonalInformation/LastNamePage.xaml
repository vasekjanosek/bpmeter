<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:BpMeter.UI.Pages.Settings"
             x:Class="BpMeter.UI.Pages.Settings.AddPersonalInformation.LastNamePage"
             Title="Add Personal infromation">
    <StackLayout>
        <Label Text="What your last name?" />
        <Entry Text="{Binding LastName}" />
        <HorizontalStackLayout>
            <Button Text="Back" Command="{Binding ChangePageCommand}" CommandParameter="MiddleNamePage" />
            <Button Text="Continue" Command="{Binding ChangePageCommand}" CommandParameter="BirthDatePage" />
        </HorizontalStackLayout>
    </StackLayout>

</ContentPage>